{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["ES2023"],
    "module": "node16",
    "moduleResolution": "node16",
    "noEmit": true,
    "target": "es2020",
    "declaration": true,
    "declarationMap": true, 
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}